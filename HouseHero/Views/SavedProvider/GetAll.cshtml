@using DAL.VM
@model PaginatedVM<Provider>

@{
    ViewData["Title"] = "قائمة المفضلين";

    Layout = "_NewLayout";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/saved-provider.css">
</head>

<body>
<div class="main">
    <div class="container">
        <div class="title">
            قائمة المفضلين
        </div>

        <form method="post" asp-action="sorted" asp-controller="SavedProvider" class="sorting">
            <input name="id" hidden value="@ViewBag.CustomerId" />
            <div class="dropdown">
                <select name="serviceid" id="serviceid">
                    <option value="0" selected>اختر نوع الخدمة</option>
                    @foreach (var item in Model.Services)

                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <button type="submit" class="button2">فرز</button>
        </form>
        <div class="cards">
            @foreach (var Provider in Model.item)
            {
                    <a asp-controller="Provider" asp-action="Details" asp-route-id="@Provider.Id">
                    <div class="card">
                        <div class="card-top-side">
                        <img src="/Images/ProfilePic.png" class="card-image" alt="Provider Image">
                        <p><i class="fa-solid fa-location-dot"></i>@Provider.ApplicationUser.City.Name</p>
                            <div class="card-info">
                                <h6>@Provider.ApplicationUser.UserName</h6>
                                <p>@Provider.Service.Name</p>
                                <p>
                                    <i class="fa-solid fa-hand-holding-dollar"></i> @Provider.MinPrice : @Provider.MaxPrice
                                    جنيه
                                </p>
                            </div>
                                <div class="card-rating">
                                    <p dir="ltr">@Provider.Rating <i class="fa-solid fa-star"></i></p>
                                </div>
                        </div>
                        <div class="description">
                            <p>@Provider.Bio</p>
                        </div>
                        <div style="text-align: left;">
                            <a href="/SavedProvider/Delete?CustomerId=@ViewBag.CustomerId&ProviderId=@Provider.Id"
                               class="button1"
                               style="color: #303e42;">
                                حذف
                            </a>
                        </div>
                    </div>
                </a>
            }
        </div>

        <form asp-action="GetAll" asp-controller="SavedProvider" class="pagination-controls">
            <div style="display: flex; gap: 20px; align-items: center; margin: 20px 0;">
                @if (Model.Haspreviouspage)

                {
                    <input name="id" hidden value="@ViewBag.CustomerId" />
                    <input name="pagenumber" hidden value="@(Model.pagenum-1)" />
                    <button type="submit" class="button2">السابق</button>
                }
                <span style="color: #303e42; font-weight: 600;">
                    صفحة @Model.pagenum من @Model.totalpage
                </span>
                @if (Model.Hasnextpage)

                {
                    <input name="id" hidden value="@ViewBag.CustomerId" />
                    <input name="pagenumber" hidden value="@(Model.pagenum+1)" />
                    <button type="submit" class="button2">التالي</button>
                }
            </div>
        </form>
    </div>
</div>
</body>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const profileBtn = document.getElementById("profile-btn");
            const profileMenu = document.getElementById("profile-menu");

            profileBtn.addEventListener("click", function () {
                if (profileMenu.style.display === "none" || profileMenu.style.display === "") {
                    profileMenu.style.display = "block";
                } else {
                    profileMenu.style.display = "none";
                }
            });

            window.addEventListener("click", function (event) {
                if (!profileBtn.contains(event.target)) {
                    profileMenu.style.display = "none";
                }
            });
        });
    </script>
    </html>
}