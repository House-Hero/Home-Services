@model PortfolioItemViewModel

@{
    ViewData["Title"] = "EditPortfolios";
}

<h1>EditPortfolios</h1>

<h4>ProviderWithAllDataViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
    <form method="post" enctype="multipart/form-data" asp-action="EditPortfolioItem">
    <div class="container">
            <a asp-action="Edit" asp-route-id="@Model.ProviderID" class="text-decoration-none"> اعدادات الحساب</a>
    </div>
        <input asp-for="ProviderID" type="hidden" />
            
