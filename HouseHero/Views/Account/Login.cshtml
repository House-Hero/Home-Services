@model HouseHero.Models.ViewModels.LoginUserViewModel
@{

    ViewData["Title"] = "Login";

    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>

    <!-- Top Right Widget -->
    <div class="top-right-widget">
        <div class="view">
            <div class="text-wrapper">خدماتك</div>
        </div>
        <img class="img" src="~/assets/frame-7.svg" alt="Icon">
    </div>

    <!-- Main Login Form -->
    <div class="frame">
        <div class="login-form">
            <h2 class="text-wrapper">تسجيل الدخول</h2>
            <p class="p">قم بتسجيل الدخول إلى حسابك حتى تتمكن من طلب الخدمة التي تريدها</p>
            <form asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Email" class="input-field" type="email" placeholder="البريد الإلكتروني">
                        <img src="~/assets/ic_outline-email.svg" alt="Email Icon">
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input asp-for="Password" class="input-field" type="password" placeholder="كلمة السر">
                        <img src="~/assets/material-symbols_lock-outline.svg" alt="Password Icon">
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <button type="submit" class="submit-button">تسجيل الدخول</button>
            </form>
            <div class="div-5">
                لا تملك حسابا حتى الآن؟ <a asp-action="RegisterType" class="text-wrapper-4">سجل حسابًا الآن</a>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}