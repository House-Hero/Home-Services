@model HouseHero.Models.ViewModels.RegisterTypeViewModel


<h4>RegisterTypeViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterType">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Please select your registration type:</label>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="IsProvider" id="customer" value="false" checked />
                    <label class="form-check-label" for="customer">
                        I am a Customer
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="IsProvider" id="provider" value="true" />
                    <label class="form-check-label" for="provider">
                        I am a Service Provider
                    </label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
