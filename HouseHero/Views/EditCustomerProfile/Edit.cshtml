@model EditCustomerViewModel
@{
    // SelectList listItems = new SelectList(ViewBag.cityList, "Id", "Name");
    Layout = "_CustomerProfileLayout";
}

<div class="profile-container">
    <div class="header2">
        <h3>بيانات الصفحة الشخصية</h3>
    </div>
    <div class="profile-info">
        <div class="profile-pic">
            <img src="@Model.ImageUrl" alt="الصورة الشخصية" />
            <input asp-for="@Model.Image" />
        </div>
    </div>

    <form class="Data" method="post" asp-action="SaveChange" enctype="multipart/form-data" asp-controller="EditCustomerProfile">
        <div class="grid-data">
        <input name="id" value="@Model.CustomerId" hidden />
        <input asp-for="@Model.ApplicationUserId" hidden />
        <div class="form-group">
            <label asp-for="@Model.CustomerName" class="name">الاسم</label>
            <input asp-for="@Model.CustomerName" type="text" id="name" />
        </div>

        <div class="form-group">
            <label for="city" class="city">المدينة</label>
            <div class="dropdown">
                <select name="CityId">
                    @foreach (var item in @Model.Cities)
                    {
                        if (@item.Id == @Model.CityID)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.PhoneNumber" class="phone">رقم الهاتف</label>
            <input asp-for="@Model.PhoneNumber" type="tel" id="phone" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Age" class="age">العمر</label>
            <input asp-for="@Model.Age" type="number" id="age" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Address" class="address">العنوان</label>
            <input asp-for="@Model.Address" type="text" id="address" />
        </div>
        </div>
        <button type="submit" class="base" value="Save change">حفظ التغييرات</button>
    </form>
</div>

@section EditCustomerProfile{

    <link rel="stylesheet" href="~/css/EditCustomerProfile.css" />

}


